{
  "kind": "collectionType",
  "collectionName": "variants",
  "info": {
    "singularName": "variant",
    "pluralName": "variants",
    "displayName": "Variant"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "product_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    },
    "attribute_id": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::attribute.attribute",
      "inversedBy": "variant_id"
    },
    "title": {
      "type": "string"
    },
    "stock": {
      "type": "integer"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "isAvailable": {
      "type": "boolean"
    }
  }
}
